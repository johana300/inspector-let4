<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.letchile.let.VehLiviano.Fotos.documento">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="500dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center"
            android:text="Documento"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center"
            android:text=""
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnVolverDocuE"
            style="@android:style/Widget.Button"
            android:layout_width="136dp"
            android:background="@drawable/boton_redondo"
            android:textColor="@android:color/background_light"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnInvisibleDocuE"
            android:drawableLeft="@android:drawable/ic_menu_revert"
            android:text="Volver" />

        <Button
            android:id="@+id/btnInvisibleDocuE"
            style="@android:style/Widget.Button"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnVolverDocuE"
            android:text="Volver a Secciones"
            android:textSize="12sp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btnVolverSecDocuE"
            style="@android:style/Widget.Button"
            android:layout_width="1200dp"
            android:layout_height="45dp"
            android:layout_alignTop="@+id/btnInvisibleDocuE"
            android:layout_toEndOf="@+id/btnInvisibleDocuE"
            android:background="@drawable/boton_redondo"
            android:text="Siguiente"
            android:textColor="@android:color/background_light"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/textView20"
            android:layout_below="@+id/textView19">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btnSeccionUnoDocumento"
                        style="@android:style/Widget.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SecciÃ³n 1: Toma de Fotos Obligatorias"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btnDocumentoE"
                        style="@android:style/Widget.Button"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:drawableLeft="@android:drawable/ic_menu_camera"
                        android:drawablePadding="8dp"
                        android:text="Foto Documento"
                        android:textColor="@android:color/background_light"
                        android:textSize="14sp"
                        android:background="@drawable/boton_redondo"
                        tools:layout_editor_absoluteX="10dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imageDocumentoE"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnPACE"
                        style="@android:style/Widget.Button"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:background="@drawable/boton_redondo"
                        android:drawableLeft="@android:drawable/ic_menu_camera"
                        android:drawablePadding="8dp"
                        android:text="Foto PAC"
                        android:textColor="@android:color/background_light"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imagePACE"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnCarnetAnversoE"
                        style="@android:style/Widget.Button"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:drawableLeft="@android:drawable/ic_menu_camera"
                        android:drawablePadding="8dp"
                        android:text="Foto Carnet Anverso"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/boton_redondo"
                        tools:layout_editor_absoluteX="100dp"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imageCarnetAnversoE"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnCarnetReversoE"
                        style="@android:style/Widget.Button"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:drawableLeft="@android:drawable/ic_menu_camera"
                        android:drawablePadding="8dp"
                        android:text="Foto Carnet Reverso"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/boton_redondo"
                        tools:layout_editor_absoluteX="100dp"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imageCarnetReversoE"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnConvertibleE"
                        style="@android:style/Widget.Button"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:drawableLeft="@android:drawable/ic_menu_camera"
                        android:drawablePadding="8dp"
                        android:text="Foto Adicional Convertible"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/boton_redondo"
                        tools:layout_editor_absoluteX="100dp"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imageConvertibleE"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnAdicionalDocumentoE"
                        style="@android:style/Widget.Button"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:drawableLeft="@android:drawable/ic_menu_camera"
                        android:drawablePadding="8dp"
                        android:text="Foto Adicional"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/boton_redondo"
                        tools:layout_editor_absoluteX="100dp"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imageAdicionalDocumentoE"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:visibility="gone" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
